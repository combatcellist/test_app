<div class="content-wrapper">
 <div class="content-block">
 <% @posts.each do |post| %>
 <div class="content">
    <div class="user-about">
       <div class="image">
          <%= image_tag "303592.jpg" %>
        </div>
        <div class="profile">
        <div class="name-history">
            <div class="name">
            ダーン
            </div>
            <div class="learning-history">
              学習歴: 半年
            </div>
        </div>
          <div class="purpose">
            学習目的: Railsを学んでエンジニアになるため
          </div>
        </div>
        
        </div>

        <div class="text">
            <p><%= post.content %></p>
        </div>

        <% if post.images.attached? %>
          <div class="images">
            <% post.images.each do |image| %>
              <%= image_tag image %> <br>
            <% end %>   
          </div>
        <% end %>

        <div class="action-menu">
          <div class="like">

          </div>
          <div class="comment">          
          
          </div>
        </div>
      </div>
 <% end %>
  
   </div>
     
      <div class="sidebar">
        <div class="box"></div>
        <div class="box"></div>
      </div>
</div>